<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="layout" template="/WEB-INF/templates/layout.jsp"/>

    <definition name="home" extends="layout">
        <put-attribute name="pageTitle" value="home.title"/>
        <put-attribute name="content" value="/WEB-INF/home.jsp"/>
        <put-attribute name="menuTab" value="home" />
    </definition>

    <definition name="error" extends="layout">
        <put-attribute name="pageTitle" value="error.title"/>
        <put-attribute name="content" value="/WEB-INF/error.jsp"/>
        <put-attribute name="menuTab" value="home" />
    </definition>

    <definition name="auth" extends="layout">
        <put-attribute name="pageTitle" value="login.title"/>
        <put-attribute name="content" value="/WEB-INF/auth.jsp"/>
        <put-attribute name="menuTab" value=""/>
    </definition>


</tiles-definitions>